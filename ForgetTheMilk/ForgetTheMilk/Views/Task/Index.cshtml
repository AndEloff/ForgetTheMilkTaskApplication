@model List<string>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p>Add a task:</p>
    <form action="@Url.Action("Add")" method="post">
        <input type="text" class="input-lg col-xs-12" name="task" autofocus/>
    </form>
</div>

<h2>@Model.Count() Task(s)</h2
<table class="table">
    <tr>
        <th>Description</th>
    </tr>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>
                    @task
                </td>
            </tr>
        }
    </tbody>
</table>